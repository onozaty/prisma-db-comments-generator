{
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(pnpm run test:*)",
      "Bash(pnpm run lint:*)",
      "Bash(pnpm run format:*)",
      "WebFetch(domain:github.com)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".ts\"))' | xargs -r npx prettier --write"
          }
        ]
      }
    ]
  }
}
